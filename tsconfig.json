{
    "compilerOptions": {
        "module": "ESNext",
        "target": "es2017",
        "lib": [
            "ESNext",
            "DOM"
        ],
        "esModuleInterop": true,
        "strict": true,
        "strictNullChecks": true,
        "moduleResolution": "bundler",
        "resolveJsonModule": true,
        "skipLibCheck": true
    },
    "include": [
        "src",
        "test",
        "vite.config.ts"
    ],
    "exclude": [
        "**/dist",
        "**/node_modules"
    ]
}